.container {
  position: relative;
  overflow: hidden;
}
.bg_img {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 1;
}
.nav_top {
  position: absolute;
  z-index: 10;
  color: #fff;
}
.nav_back {
  position: absolute;
  z-index: 11;
}
scroll-view {
  position: absolute;
  z-index: 2;
  top: 15%;
  left: 10%;
  height: 70%;
  width: 80%;
}
.info_wrap {
  width: 100%;
  background-color: rgba(255, 255, 255, 0.5);
  padding: 30rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.detail_wrap {
  width: 80%;
  margin-bottom: 40rpx;
}
.detail_title {
  color: #666;
  font-size: 26rpx;
  height: 70rpx;
  line-height: 70rpx;
  padding-left: 20rpx;
}
.way_wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 70rpx;
  line-height: 70rpx;
  color: #333;
  font-size: 28rpx;
  border-bottom: 1px solid #666;
  padding: 0 20rpx;
}
.arrow_right {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.iptP {
  color: #555;
}
.send_code {
  width: 280rpx;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  border: 1px solid #666;
  border-radius: 5rpx;
}
.check_wrap {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-left: 0;
}
.check_img_wrap {
  width: 26rpx;
  height: 26rpx;
  border: 1px solid #666;
  border-radius: 5rpx;
  margin-right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.checked_img {
  width: 28rpx;
  height: 24rpx
}
.agree_text {
  color: #333
}
.bottom_btn {
  position: fixed;
  z-index: 4;
  bottom: 0;
  width: 100%;
  text-align: center;
  height: 110rpx;
  line-height: 110rpx;
  color: #333;
  font-size: 36rpx;
  font-weight: bold;
  letter-spacing: 20rpx;
  padding-left: 10rpx;
  background-color: rgba(255, 255, 255, 0.5);
}
.bottom_btn:active {
  background-color: rgba(255, 255, 255, 0.7);
}

.sel_way_bg {
  position: absolute;
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
  z-index: 20;
  background-color: rgba(0, 0, 0, 0.5);
  animation: sel_way_bg_show 0.2s linear;
}
@keyframes sel_way_bg_show {
  0% {opacity: 0;}
  100% {opacity: 1;}
}
.sel_way_wrap {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 21;
  background-color: rgba(255, 255, 255, 0.9);
}
.show_sel_way_wrap {
  bottom: 0;
  animation: show_sel_way_wrap 0.2s ease-out;
}
@keyframes show_sel_way_wrap {
  0% {bottom: -450rpx;}
  100% {bottom: 0;}
}
.hide_sel_way_wrap {
  bottom: -450rpx;
  animation: hide_sel_way_wrap 0.2s ease-in;
}
@keyframes hide_sel_way_wrap {
  0% {bottom: 0;}
  100% {bottom: -450rpx;}
}
.way_all {
  height: 330rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.way_all>view {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 40rpx;
}
.way_img_wrap {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 1px solid #111;
  display: flex;
  justify-content: center;
  align-items: center;
}
.way_img {
  width: 50rpx;
  height: 50rpx;
}
.way_name {
  color: #111;
  font-size: 26rpx;
  margin-top: 10rpx;
}
.cencel_sel {
  height: 110rpx;
  color: #333;
  font-size: 30rpx;
  letter-spacing: 16rpx;
  padding-left: 8rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
}