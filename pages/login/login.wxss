.container {
  width: 100%;
  height: 100%;
}
.login_wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.headImg {
  display: block;
  width: 150rpx;
  height: 150rpx;
  margin-top: 50rpx;
}
.login_info, .login_way {
  margin: 80rpx 0;
  padding: 60rpx 0;
  width: 80%;
  background-color: rgba(255, 255, 255, 0.5);
  border-radius: 10rpx;
}
.btn {
  background-color: rgba(0, 0, 0, 0);
  border: 1px solid rgba(0, 0, 0, 0.4);
  color: #666;
  letter-spacing: 5rpx;
  width: 70%;
}
.btn:active {
  background-color: rgba(255, 255, 255, 0.3);
}
.btn1 {
  margin-bottom: 50rpx;
}
.rtn_way {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin: -30rpx 0 50rpx 15rpx;
  color: #666;
}
.rtn_img {
  width: 50rpx;
  height: 50rpx;
  margin-right: 15rpx;
}
.user_wrap {
  width: 80%;
  margin: 0 auto;
  margin-bottom: 60rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.user_wrap input {
  padding-left: 3%;
  padding-right: 18%;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  border: 1px solid rgba(0, 0, 0, .2);
  caret-color: rgba(0, 0, 0, 0.6);
}
.inpImg {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}
.showPwd {
  width: 40rpx;
  height: 35rpx;
  position: absolute;
  right: 20%;
  z-index: 2;
}
.forgetPwd {
  color: #666;
  margin-right: 15%;
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
}
